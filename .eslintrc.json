{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "jest": true,
    "es6": true
  },
  "rules": {
    "eqeqeq": ["error", "always"],
    "no-implicit-coercion": "error",
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/no-explicit-any": "off",
    "react-refresh/only-export-components": "off",
    "@typescript-eslint/no-duplicate-enum-values": "error",
    "@typescript-eslint/no-inferrable-types": "off",
    "@typescript-eslint/ban-ts-comment": "off",
    "typescript/no-unsafe-assignment": "off",
    "typescript/no-unsafe-member-access": "off",
    "typescript/no-unsafe-call": "off",
    "typescript/no-unsafe-return": "off",
    "@typescript-eslint/no-empty-function": "off",
    "@typescript-eslint/ban-types": "off", // Desactiva la regla de tipos prohibidos
    "no-unused-expressions": "off", // Desactiva la regla no-unused-expressions
    "react-hooks/exhaustive-deps": "off", // Desactiva el warning de dependencias en useEffect
    "no-useless-escape": "off" // Desactiva la regla no-useless-escape
  }
}
